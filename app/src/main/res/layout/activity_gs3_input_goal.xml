<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GetStarted.GS1_InputNameActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tujuan Diet"
        android:layout_marginTop="200dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/blue_600"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:hint="Tujuan Diet"
        android:layout_marginTop="10dp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        android:textColorHint="@color/black"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/baseline_arrow_drop_down_24"
        >

        <EditText
            android:id="@+id/editTextTujuanDiet"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:textColor="@color/black"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:importantForAutofill="no"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Target"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/blue_600"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:id="@+id/datePickerTextInputLayout"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/baseline_date_range_24"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Tanggal Target Capaian">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gs3datePickerTextInputEditText"
            android:layout_width="300dp"
            android:textColor="@color/black"
            android:layout_height="50dp"
            android:focusable="false"
            android:clickable="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Kalori Harian"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/blue_600"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="65dp"
        app:boxStrokeColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:hintTextColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Jumlah Kalori Harian">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gs3jumlahkalori"
            android:layout_width="300dp"
            android:textColor="@color/black"
            android:layout_height="50dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gs3_btn_next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_blue_normal"
        android:text="NEXT"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="280dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:fontFamily="@font/poppins_bold"/>

</LinearLayout>