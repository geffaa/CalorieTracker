<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".GetStarted.GS4_CongratsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/congratulations"
        android:layout_marginTop="50dp">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONGRATULATIONS!"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/blue_600"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are enrolled with our weight \ngain process, gain weight and \nenjoy your  every meal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gs4_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cornerRadius="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:backgroundTint="@color/blue_600"
        android:text="FINISH"
        android:fontFamily="@font/poppins_bold">
    </com.google.android.material.button.MaterialButton>



</LinearLayout>